<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
    <h1 class="text-center text-black">タグ登録（地域側投稿）</h1>  
     <%= bootstrap_form_with(model: @category_resource, url: category_resources_path, local: true) do |f| %>
      <%= f.text_field :tag_name, label:"地域資源" %>
      <%= f.submit "登録" %>
     <% end %>
     <%= bootstrap_form_with(model: @category_issue, url: category_issues_path, local: true) do |f| %>
      <%= f.text_field :tag_name, label:"地域課題" %>
      <%= f.submit "登録" %>
     <% end %>
    </div>
  </div> 
</div>   