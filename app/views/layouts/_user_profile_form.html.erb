<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-4 users-new-container">
      <h1 class="text-center text-black">プロフィール情報登録</h1>
        <%= bootstrap_form_for(user_profile) do |f| %>
        　<div>
        　 <%= f.hidden_field :user_id, :value => current_user.id %>
        　 <div class="sbh1">テスト</div>
          　<p>どちらで登録するかお選びください</p>
          　<%= f.radio_button :profile_type, 1, label: "地域側" %>
            <%= f.radio_button :profile_type, 2, label: "起業希望者" %>
            <br><input type="radio" id="sbh1" name="test" value="ラジオボタン１"/><span>地域側</span></br>
            <br><input type="radio" id="sbh2" name="test" value="ラジオボタン２"/><span>起業希望者</span></br>
            
            <%= f.text_field :screen_name, label:"表示名" %>
            <%= f.file_field :avatar, label:"プロフィール画像" %> 
            <% prefecture = ['北海道','青森県','岩手県','宮城県','秋田県','山形県','福島県','茨城県','栃木県','群馬県','埼玉県','千葉県','東京都','神奈川県','新潟県','富山県','石川県','福井県','山梨県','長野県','岐阜県','静岡県','愛知県','三重県','滋賀県','京都府','大阪府','兵庫県','奈良県','和歌山県','鳥取県','島根県','岡山県','広島県','山口県','徳島県','香川県','愛媛県','高知県','福岡県','佐賀県','長崎県','熊本県','大分県','宮崎県','鹿児島県','沖縄県'] %>
            <% array = [["都道府県",""]] %>
            <% prefecture.each do |i| %>
              <% array << [i, i] %>
            <% end %>
            <%= f.select :prefecture, array, class: 'btn', label:"都道府県"  %>
            <%= f.text_field :city, label:"市町村以下" %>
            <div class="sbh1">地域側として登録する内容です。
              <%= f.text_area :about_region, label:"地域について" %>
              <%= f.text_area :incubation, label:"地域の起業支援" %>
              <%= f.text_area :immigration_support, label:"地域の移住支援"  %>
              <%= f.text_area :other1, label:"その他"  %>
            </div>
            <div class="sbh2">起業希望者として登録する内容です。
              <%= f.text_area :job, label:"職業" %>
              <%= f.text_area :skill, label:"得意なこと" %>
              <%= f.text_area :interest, label:"興味のあること" %>
              <%= f.text_area :other2, label:"その他"  %>
            </div>
            
            <%= f.radio_button :public_status_id, 1, label:"公開", inline: true %>
            <%= f.radio_button :public_status_id, 2, label:"非公開", inline: true %>
            <div><%= f.submit %></div>
          </div>
        <% end %>
   </div>
  </div>
</div>
