<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="text-center text-black">投稿</h1>
        <%= bootstrap_form_for(post) do |f| %>
        　<div>
        　  <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.text_field :title, label:"タイトル" %>
            <% prefecture = ['北海道','青森県','岩手県','宮城県','秋田県','山形県','福島県','茨城県','栃木県','群馬県','埼玉県','千葉県','東京都','神奈川県','新潟県','富山県','石川県','福井県','山梨県','長野県','岐阜県','静岡県','愛知県','三重県','滋賀県','京都府','大阪府','兵庫県','奈良県','和歌山県','鳥取県','島根県','岡山県','広島県','山口県','徳島県','香川県','愛媛県','高知県','福岡県','佐賀県','長崎県','熊本県','大分県','宮崎県','鹿児島県','沖縄県'] %>
            <% array = [["都道府県",""]] %>
            <% prefecture.each do |i| %>
              <% array << [i, i] %>
            <% end %>
            <%= f.select :prefecture, array, class: 'btn', label:"都道府県"  %>
            <%= f.text_field :city, label:"市町村以下" %>
            
            
            <p>どちらで登録するかお選びください</p>
            <div>
              <%#= f.check_box :post_type1, label: "地域側" %>
              <input name="post[post_type1]" type="hidden" value="0" autocomplete="off" /><input class="form-check-input" type="checkbox" value="1" name="post[post_type1]" id="post_post_type1" /><label class="form-check-label" for="post_post_type1">地域側</label>
              <div class="post_post_type1">地域側として登録する内容です。
                <%= f.text_area :body1, label:"地域資源・地域課題など", size: "40x15", placeholder:"" %>
                <%= f.text_area :feature, label:"地域の特色", size: "40x15", placeholder:"" %>
              </div>
            </div>
            <div>
              <%#= f.check_box :post_type2, label: "起業希望者" %>
              <input name="post[post_type2]" type="hidden" value="0" autocomplete="off" /><input class="form-check-input" type="checkbox" value="1" name="post[post_type2]" id="post_post_type2" /><label class="form-check-label" for="post_post_type2">起業希望者</label>
              <div class="post_post_type2">起業希望者として登録する内容です。
                <%= f.text_area :body2, label:"やりたいことなど", size: "40x15", placeholder:"" %>
              </div>
            </div>
            <!--「地域側」を選択した時に「起業希望者」のチェックボックスを消すにはAjaxを利用する(？)-->
            <div>
            <%= f.file_field :main_image, label:"画像" %>
            <%= f.file_field :sub_image1_image, label:"画像" %>
            <%= f.file_field :sub_image2_image, label:"画像" %>
            <%= f.file_field :sub_image3_image, label:"画像" %>
            <%= f.file_field :sub_image4_image, label:"画像" %>
            <%= f.file_field :attachment, label:"画像" %>
            </div>
            <%= f.text_field :realizability, label:"現実可能性" %>
            <%= f.text_field :earnest, label:"本気度" %>
            <div class="public_status">
              <%= f.radio_button :public_status_id, 1, label:"公開", inline: true %>
              <%= f.radio_button :public_status_id, 2, label:"非公開", inline: true %>
            </div>
          <div class="submit"><%= f.submit %></div>
          </div>
        <% end %>
   </div>
  </div>
</div>
